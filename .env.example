# GitHub Configuration
# Required: Get your token from https://github.com/settings/tokens
# Scopes needed: repo (for private repos) or public_repo (for public repos only)
GITHUB_TOKEN=your_github_token_here

# Webhook Configuration (Optional)
# Generate a secret for webhook signature verification
# Use: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Review Configuration
# Minimum confidence threshold (0.0-1.0) for posting comments
MIN_CONFIDENCE_THRESHOLD=0.6

# Maximum number of comments to post per PR (prevents spam)
MAX_COMMENTS_PER_PR=50

# Enable learning mode to improve from feedback
ENABLE_LEARNING_MODE=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development

# Database Configuration (Optional - for future use)
# Neo4j Graph Database (for dependency tracking)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_change_this

# Qdrant Vector Database (for code similarity search)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Redis Cache (for caching analysis results)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AI/ML Configuration (Optional)
# Set to true to use local models instead of cloud APIs
USE_LOCAL_MODELS=false

# OpenAI API (if using OpenAI for analysis)
# OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (if using Hugging Face models)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
